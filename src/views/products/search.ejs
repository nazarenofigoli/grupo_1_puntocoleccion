<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>

    <main>
        <section class="main-Ptodos-section-titulos"><h4>Productos busqueda: <%= busqueda %></section>

        <section class="main-Ptodos-section-tendencias">

            <% products.forEach(product => { %>

                <section class="main-Ptodos-section-article-division">
                    <article class="main-Ptodos-section-articulo">
                        <a href="/products/detail/<%= product.id %>"><img src="/img/productos/<%=product.Imageproducts[0].imagen%>" class="main-Ptodos-imagen-producto"></a>
                        <div class="main-Ptodos-descripcion-precio">
                            <a href="/products/detail/<%= product.id %>">
                                <h5 class="main-Ptodos-descripcion"><%= product.nombre%></h5>
                                <p class="main-Ptodos-precio">$ <%=product.precio%></p>
                                <p class="main-Ptodos-cuotas">10 cuotas sin inter√©s de $ <%=product.precio / 10 %></p>
                            </a>
                            <div class="main-Ptodos-section-botones">
                                <button class="main-Ptodos-botones">Comprar</button>
                                <button class="main-Ptodos-botones">Agregar al <i class="fa-solid fa-cart-shopping"></i></button>
                            </div>
                        </div>
                    </article>
                </section>

            <% }) %>

        </section>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>
</html>